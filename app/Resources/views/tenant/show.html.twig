{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tenant</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tenant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ tenant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ tenant.prenom }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ tenant.pseudo }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ tenant.email }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tenant_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tenant_edit', { 'id': tenant.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
